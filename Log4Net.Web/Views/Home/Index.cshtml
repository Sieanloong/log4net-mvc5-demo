@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>log4net POC Demo</h1>
</div>

<div class="row">
    <div class="col-xs-6 col-sm-6 col-md-8 col-lg-8">
        <h2>Trigger Single Log Event</h2>
        <div class="btn-group">
            <button class="btn btn-default" onclick="FireEvent(1)">Debug</button>
            <button class="btn btn-info" onclick="FireEvent(2)">Info</button>
            <button class="btn btn-primary" onclick="FireEvent(3)">Warn</button>
            <button class="btn btn-warning" onclick="FireEvent(4)">Error</button>
            <button class="btn btn-danger" onclick="FireEvent(5)">Fatal</button>
        </div>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
        <h3>Send email on error?</h3>
        <input type="checkbox" name="email-error-log" id="email-error-log" data-size="small" />
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h2>Trigger Event Loop</h2>
        <br />
        <div class="row">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-lg-1 control-label">Debug</label>
                    <div class="col-lg-10">
                        <input type="checkbox" id="loop-switch-debug" class="loop-toggle" data-size="small" data-evt-code="1" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-1 control-label">Info</label>
                    <div class="col-lg-10">
                        <input type="checkbox" id="loop-switch-info" class="loop-toggle" data-size="small" data-evt-code="2" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-1 control-label">Warn</label>
                    <div class="col-lg-10">
                        <input type="checkbox" id="loop-switch-warn" class="loop-toggle" data-size="small" data-evt-code="3" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-1 control-label">Error</label>
                    <div class="col-lg-10">
                        <input type="checkbox" id="loop-switch-error" class="loop-toggle" data-size="small" data-evt-code="4"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-1 control-label">Fatal</label>
                    <div class="col-lg-10">
                        <input type="checkbox" id="loop-switch-fatal" class="loop-toggle" data-size="small" data-evt-code="5" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .row{margin: 0 0 10px 0}
    .btn{padding-left: 20px; padding-right: 20px;}
</style>